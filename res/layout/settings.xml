
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:padding="10dip"
    android:background="@drawable/bcg"
   >

        <EditText
            android:id="@+id/phone3"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/phone2"
            android:layout_marginTop="37dp"
            android:layout_marginLeft="20dp"
            android:ems="10" 
         android:background="#50FFFFFF"
            android:inputType="phone" />

        <Button
            android:id="@+id/contact3"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/contact2"
            android:layout_alignTop="@+id/phone3"
            android:background="@drawable/img" />

        <EditText
            android:id="@+id/phone1"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="114dp"
            android:layout_marginLeft="20dp"
            android:ems="10" 
             android:background="#50FFFFFF"
            android:inputType="phone" />

        <Button
            android:id="@+id/contact1"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/phone1"
            android:layout_marginRight="20dp"
            android:background="@drawable/img" />

        <Button
            android:id="@+id/contact2"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/contact1"
            android:layout_below="@+id/contact1"
            android:layout_marginTop="40dp"
            android:background="@drawable/img" />

        <EditText
            android:id="@+id/phone2"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/contact2"
            android:ems="10"
              android:background="#50FFFFFF"
            android:inputType="phone" >

            <requestFocus />
        </EditText>

         <Button
             android:id="@+id/back"
             android:layout_width="75dp"
             android:layout_height="75dp"
           android:layout_marginLeft="1dp"
       android:layout_marginTop="1dp"
             android:background="@drawable/settingsicon" />

         <Button
             android:id="@+id/bsave"
             android:layout_width="60dp"
             android:layout_height="60dp"
             android:layout_alignParentBottom="true"
             android:layout_centerHorizontal="true"
             android:background="@drawable/save" />
    
</RelativeLayout>